<Page x:Class="VetClinic.Views.Pages.ClosedAppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="{Binding Source={StaticResource Strings}, Path=[ClosedAppointments]}">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=[ClosedAppointments]}" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="{Binding Source={StaticResource Strings}, Path=[Filter]}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
                <Button Content="{Binding Source={StaticResource Strings}, Path=[ClearFilter]}" Margin="10,0,0,0" Click="ClearFilter_Click"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding FilteredAppointments}" AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedAppointment}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Date]}" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Pet]}" Binding="{Binding Pet.Name}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Service]}" Binding="{Binding Service.Name}" Width="*"/>
                    <DataGridTemplateColumn Header="{Binding Source={StaticResource Strings}, Path=[Actions]}" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Source={StaticResource Strings}, Path=[View]}"
                                        Command="{Binding DataContext.ViewAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
