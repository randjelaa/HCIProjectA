<Page x:Class="VetClinic.Views.Pages.ClosedAppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ClosedAppointmentsPage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Finished Appointments" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Filter by date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker SelectedDate="{Binding SelectedDate}" Width="150"/>
                <Button Content="Clear Filter" Margin="10,0,0,0" Click="ClearFilter_Click"/>
            </StackPanel>

            <DataGrid ItemsSource="{Binding FilteredAppointments}" AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedAppointment}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="Pet" Binding="{Binding Pet.Name}" Width="*"/>
                    <DataGridTextColumn Header="Service" Binding="{Binding Service.Name}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="View"
                                        Command="{Binding DataContext.ViewAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
