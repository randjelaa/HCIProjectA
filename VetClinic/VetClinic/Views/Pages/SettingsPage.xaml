<Page x:Class="VetClinic.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:VetClinic.Views.Pages"
      mc:Ignorable="d"
      Title="SettingsPage">

    <ScrollViewer>
        <StackPanel Margin="20" HorizontalAlignment="Center" Width="400" VerticalAlignment="Top">
            <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Name" />
            <TextBox Text="{Binding Name}" Margin="0,0,0,10" />

            <TextBlock Text="Email" />
            <TextBox Text="{Binding Email}" Margin="0,0,0,10" />

            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" PasswordChanged="PasswordBox_PasswordChanged" />

            <TextBlock Text="Theme" />
            <ComboBox SelectedItem="{Binding SelectedTheme}" Margin="0,0,0,10">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
            </ComboBox>

            <TextBlock Text="Language" />
            <Menu HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <MenuItem Header="{Binding Source={StaticResource Strings}, Path=[Language]}">
                    <MenuItem Header="English" Tag="en" Click="LanguageMenuItem_Click"/>
                    <MenuItem Header="Srpski" Tag="sr" Click="LanguageMenuItem_Click"/>
                </MenuItem>
            </Menu>

            <Button Content="Save Changes" Command="{Binding SaveCommand}" />
        </StackPanel>
    </ScrollViewer>
</Page>
