<Page x:Class="VetClinic.Views.Pages.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="{Binding Source={StaticResource Strings}, Path=[Appointments]}">

    <ScrollViewer>
        <StackPanel Margin="20">

            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=[UpcomingAppointments]}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <DataGrid ItemsSource="{Binding UpcomingAppointments}" AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedAppointment}" Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Date]}" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Pet]}" Binding="{Binding Pet.Name}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Service]}" Binding="{Binding Service.Name}" Width="*"/>
                    <DataGridTemplateColumn Header="{Binding Source={StaticResource Strings}, Path=[Actions]}" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[View]}" Margin="5,0" 
                                            Command="{Binding DataContext.ViewAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[AddRecord]}" Margin="5,0" 
                                            Command="{Binding DataContext.AddRecordCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[Delete]}" Margin="5,0" 
                                            Command="{Binding DataContext.DeleteAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="{Binding Source={StaticResource Strings}, Path=[MissedAppointments]}" FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>

            <DataGrid ItemsSource="{Binding MissedAppointments}" AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedAppointment}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Date]}" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Pet]}" Binding="{Binding Pet.Name}" Width="*"/>
                    <DataGridTextColumn Header="{Binding Source={StaticResource Strings}, Path=[Service]}" Binding="{Binding Service.Name}" Width="*"/>
                    <DataGridTemplateColumn Header="{Binding Source={StaticResource Strings}, Path=[Actions]}" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[View]}" Margin="5,0" 
                                            Command="{Binding DataContext.ViewAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[AddRecord]}" Margin="5,0"
                                            Command="{Binding DataContext.AddRecordCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="{Binding Source={StaticResource Strings}, Path=[Delete]}" Margin="5,0"
                                            Command="{Binding DataContext.DeleteAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </ScrollViewer>
</Page>
