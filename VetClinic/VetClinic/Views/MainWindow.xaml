<Window x:Class="VetClinic.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.Views"
        mc:Ignorable="d"
        Title="{Binding Source={StaticResource Strings}, Path=[MainWindow]}"
        Height="450" Width="800">
    <Grid>

        <Button Content="{Binding Source={StaticResource Strings}, Path=[Login]}"
        Width="146"
        Height="53"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,217,0,0"
        Command="{Binding LoginCommand}" />

        <TextBlock Text="{Binding Source={StaticResource Strings}, Path=[WelcomeMessage]}"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           Margin="0,100,0,0"
           FontSize="20"
           FontWeight="Bold"
           Foreground="#4A4A4A"
           TextAlignment="Center"
           TextWrapping="Wrap"
           Width="300"/>

        <!-- TODO add default text or something -->
        <ComboBox Width="120"
          HorizontalAlignment="Right"
          VerticalAlignment="Top"
          Margin="10"
          SelectionChanged="LanguageSelector_Changed">
            <ComboBoxItem Tag="en" Content="English"/>
            <ComboBoxItem Tag="sr" Content="Srpski"/>
        </ComboBox>


    </Grid>
</Window>
